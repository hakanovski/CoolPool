# CoolPool.kv
<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 15
        size_hint: (None, None)
        width: 300
        height: 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        TextInput:
            id: username
            hint_text: 'Username'
            size_hint: (1, None)
            height: 40
            multiline: False

        TextInput:
            id: password
            hint_text: 'Password'
            password: True
            size_hint: (1, None)
            height: 40
            multiline: False

        Button:
            text: 'Login'
            size_hint: (1, None)
            height: 50
            on_release: root.check_credentials()

        Label:
            text: 'Forgot your password?'
            size_hint: (1, None)
            height: 30

<MainScreen>:
    # Add components for the main screen here
    BoxLayout:
        orientation: 'vertical'
